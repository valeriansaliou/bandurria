<html>
    <head>
        <meta http-equiv="Content-Type" content="text/html; charset=utf-8" />
        <meta name="robots" content="noindex" />
    </head>

    <body>
        <template class="bandurria-template bandurria-template--form">
            <textarea
                cols="1"
                rows="1"
                name="comment_text"
                placeholder="{{ctx.i18n.field_write_your_comment}}"
            ></textarea>

            <span class="bandurria-identity" style="display: none">
                <input
                    type="text"
                    name="comment_name"
                    placeholder="{{ctx.i18n.field_whats_your_name}}"
                />
                <input
                    type="email"
                    name="comment_email"
                    placeholder="{{ctx.i18n.field_whats_your_email}}"
                />
            </span>

            <button class="bandurria-submit" type="submit" disabled>{{ctx.i18n.button_post_comment}}</button>

            <span class="bandurria-consent" style="display: none">
                <label>
                    <input type="checkbox" name="alerts_subscribe" />
                    {{ctx.i18n.label_subscribe_replies}}
                </label>
            </span>

            <span
                class="bandurria-banner bandurria-banner--presubmit"
                style="display: none"
            >
                {{ctx.i18n.banner_presubmit}}
            </span>

            <span
                class="bandurria-banner bandurria-banner--submitting"
                style="display: none"
            >
                <span class="bandurria-wait">
                    <span></span>
                    <span></span>
                    <span></span>
                </span>

                {{ctx.i18n.banner_submitting}}
            </span>

            <span
                class="bandurria-banner bandurria-banner--submitted"
                style="display: none"
            >
                <strong>{{ctx.i18n.banner_submitted_important}}</strong>
                {{ctx.i18n.banner_submitted_notice}}
            </span>

            <span
                class="bandurria-banner bandurria-banner--submiterror"
                style="display: none"
            >
                {{ctx.i18n.banner_submiterror}}
            </span>
        </template>

        <form class="bandurria-form bandurria-form--main">
            <div class="bandurria-header">
                <p>{{ctx.i18n.label_leave_a_comment}}</p>

                {{#if ctx.modifiers.imprint}}
                    <p class="bandurria-imprint">
                        {{ctx.i18n.label_comments_by}} <a href="https://github.com/valeriansaliou/bandurria" target="_blank">Bandurria</a>
                    </p>
                {{/if}}
            </div>

            <!-- Form template will be injected after this line. -->
        </form>

        {{#if comments}}
            {{> partials/comments comments=comments replies=replies ctx=ctx }}
        {{/if}}
    </body>
</html>
